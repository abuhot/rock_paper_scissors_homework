<div class="row">
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h3 class="panel-title text-center">You played <%= @user_move %>.</h3>
          </div>
          <div class="panel-body">
            <img src="/assets/images/<%= @user_move %>.png"class="img-responsive">
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title text-center">The computer played <%= @computer_move %>.</h3>
          </div>
          <div class="panel-body">
            <img src="/assets/images/<%= @computer_move %>.png" class="img-responsive">
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="well">
          <h1 class="text-center"><%= @outcome %> !</h1>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h5 class="panel-title">Summary</h5>
      </div>

      <table class="table table-hover table-striped">
        <tr>
          <th>When you played</th>
          <th>you won</th>
          <th>you lost</th>
          <th>you tied</th>
        </tr>

        <tr>
          <td>rock</td>
          <td><%= @rock_won %></td>
          <td><%= @rock_lost %></td>
          <td><%= @rock_ties %></td>
        </tr>

        <tr>
          <td>paper</td>
          <td><%= @paper_won %></td>
          <td><%= @paper_lost %></td>
          <td><%= @paper_ties %></td>
        </tr>

        <tr>
          <td>scissors</td>
         <td><%= @scissors_won %></td>
          <td><%= @scissors_lost %></td>
          <td><%= @scissors_ties %></td>
        </tr>

        <tr>
          <th>Total</th>
          <th><%= @total_won %></th>
          <th><%= @total_lost %></th>
          <th><%= @total_ties %></th>
        </tr>
      </table>
    </div>


    <div class="panel panel-info">
      <div class="panel-heading">
        <h5 class="panel-title">
          Complete history
          (<%= @count %>)
        </h5>
      </div>

      <table class="table table-hover table-striped">
        <tr>
          <th>User Move</th>
          <th>Computer Move</th>
          <th>User Wins</th>
          <th>Computer Wins</th>
          <th>Tie</th>
        </tr>

        <% @all_moves.each do |moves| %>

        <tr>
          <td><%= moves.user_move %></td>
          <td><%= moves.computer_move %></td>
          <td><%= moves.user_wins %></td>
          <td><%= moves.computer_wins %></td>
          <td><%= if moves.tie == nil
                      "0"
                  else
                    moves.tie
                   end
                   %></td>
        </tr>

        <% end %>

      </table>
    </div>
  </div>
</div>
